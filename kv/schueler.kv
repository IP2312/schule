<SchuelerScreen>:
    name: 'schueler'
    klasse_text: klasse_text
    input_vorname: input_vorname
    input_nachname: input_nachname
    canvas.before:
        Color:
            rgba: 0.8, 0.8, 0.8, 1  # Light blue background color
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "placeholder"
            id: klasse_text
            size_hint_y: 0.2
            font_size: 30


        BoxLayout:
            orientation: 'horizontal'
            
            BoxLayout:
                orientation: 'vertical'
                BoxLayout:
                    id: list_container
                    orientation: 'vertical'
                    padding: 10
                    spacing: 10
                

            BoxLayout:
                orientation: 'vertical'
                TextInput:
                    id: input_vorname
                    hint_text: 'Vorname'
                TextInput:
                    id: input_nachname
                    hint_text: 'Nachname'
                

                Button:
                    text: 'Add Schüler'
                    size_hint_y: None
                    height: 50
                    on_release: root.add_student()
                    
                Button:
                    text: 'Go to Home'
                    size_hint_y: None
                    height: 50
                    on_release: root.manager.current = 'home'

                Button:
                    text: 'Klasse hinzufügen'
                    size_hint_y: None
                    height: 50
                    on_release: root.manager.current = 'klassen'